{% extends page is defined ? "site/strackovski/masters/" ~ page.getMaster ~ ".html.twig" : "site/strackovski/masters/layout-default.html.twig" %}

{% block content %}

<div class="">
    <div class="container container-pad">

        <div class="row">

            {% for item in content %}

                <div class="col-md-8 center">
                    <div>
                        <h1 title="{{ item.getTitle }}">{{ item.getTitle }}</h1>
                    </div>
                    <p>{{ item.getBody|raw }}</p>
                    <br>
                    <form role="form" action="#">
                        <div class="form-group">
                            <label for="email">Your email</label>
                            <input type="email" class="form-control" name="msgEmail" id="email" placeholder="Your email...">
                            <span class="input-affix">Your email is needed only for replying to your inquiry, and is never revealed to any 3rd party or used for any kind of marketing purposes.</span>
                        </div>

                        <div class="form-group">
                            <label for="message">Your message</label>
                            <textarea class="form-control" rows="10" id="message" name="msgMessage" placeholder="Your message..."></textarea>
                        </div>

                        <div class="pull-right clearfix">
                            <button type="reset" class="btn btn-cancel">Cancel</button>
                            <button type="submit" class="btn btn-submit">Send</button>
                        </div>
                    </form>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}