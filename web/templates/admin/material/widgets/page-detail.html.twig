<div class="right-bar-header">
    <div class="top-header">
        <div class="right-aux-toolbar">
            <a href="#" class="paper-btn close-btn tooltipped" data-toggle="tooltip" data-placement="bottom" title="Close"><i class="fa fa-times"></i></a>
            <a href="{{  app.url_generator.generate('admin/page/delete', {page:page.getId}) }}" class="paper-btn delete-btn tooltipped" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="fa fa-trash"></i></a>
            <a href="{{ app.url_generator.generate('admin/page/edit', {page:page.getId}) }}" class="paper-btn edit-btn tooltipped" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="fa fa-pencil"></i></a>
        </div>
    </div>
    <div class="bottom-header"><h4>{{ page.getTitle }}</h4></div>
</div>

<div class="right-bar-content">
    <div class="content-section">
        <div class="section-title">Page Queries</div>

        <div class="section-entity">
            {% if page.getQueries.count > 0 %}
                {% for query in page.getQueries %}
                    <p>{{ query.toArray|join(' | ') }}</p>
                {% endfor %}
            {% else %}
                <p>No queries</p>
            {% endif %}
        </div>
    </div>

    <div class="content-section">
        <div class="section-title">
             Details
        </div>

        <div class="section-entity narrow-entity">
            <div class="dt">Accessible at</div>
            <div class="dd">http://{{ app.request.getHost ~ app.request.getBaseURL() ~ '/' ~ page.getSlug }}</div>
        </div>
    </div>

    <div class="content-section">
        <div class="section-entity">
            <div class="dt">Content label</div>
            <div class="dd">
                {% if page.getContentLabel %}{{ page.getContentLabel }}{% else %}NO LABEL{% endif %}
            </div>
        </div>
    </div>
</div>