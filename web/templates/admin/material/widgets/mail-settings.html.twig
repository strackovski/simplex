{% extends app.request.isXmlHttpRequest ? "admin/material/masters/layout-tabs-panel.html.twig" : "admin/material/views/settings.html.twig" %}

{% block tabPaneHeader %}
    <div class="controls-group controls-group-fixed">
        <div class="left-controls">
            <h3>Mailing configuration</h3>
        </div>
    </div>
{% endblock %}

{% block tabPaneContent %}

{{ form_start(form, {'action': app.url_generator.generate('admin/settings/mail') }) }}

<div class="settings-section">
    <div class="settings-name">
        <h4>Enable mailing</h4>
    </div>

    <div class="settings-content">
        <div class="des">
            The mailing system is required for user account activation, automated user credentials support, and
            email logging. It is recommended you enable and configure your system mailing account.
        </div>
        <div class="form-group field option">
            {{ form_row(form.enableMailing) }}
        </div>
    </div>
</div>
<div class="settings-section">
    <div class="settings-name">
        <h4>Server</h4>
    </div>

    <div class="settings-content">
        <div class="des">
            Server configuration parameters are provided by your mail/hosting service provider.
        </div>
        <div class="form-group field field-small">
            {{ form_label(form.mailTransport) }}
            {{ form_widget(form.mailTransport) }}
            {{ form_errors(form.mailTransport) }}
        </div>

        <div class="row">
            <div class="col-xs-7">
                <div class="form-group form-element">
                    {{ form_label(form.mailHost) }}
                    {{ form_widget(form.mailHost) }}
                    {{ form_errors(form.mailHost) }}
                </div>
            </div>
            <div class="col-xs-5">
                <div class="form-group form-element">
                    {{ form_label(form.mailPort) }}
                    {{ form_widget(form.mailPort) }}
                    {{ form_errors(form.mailPort) }}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="settings-section">
    <div class="settings-name">
        <h4>Authentication credentials</h4>
    </div>

    <div class="settings-content">
        <div class="des">
            Account credentials provided by mail service provider.
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group form-element">
                    {{ form_label(form.mailPassword) }}
                    {{ form_widget(form.mailPassword) }}
                    {{ form_errors(form.mailPassword) }}
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group form-element">
                    {{ form_label(form.mailUsername) }}
                    {{ form_widget(form.mailUsername) }}
                    {{ form_errors(form.mailUsername) }}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="settings-section">
    <div class="settings-name">
        <h4>Encryption & authentication</h4>
    </div>

    <div class="settings-content">
        <div class="des">
            Mail server encryption mechanism and authentication method
        </div>

        <div class="row">
            <div class="col-xs-6">
                <div class="form-group field field-small">
                    {{ form_label(form.mailEncryption) }}
                    {{ form_widget(form.mailEncryption) }}
                    {{ form_errors(form.mailEncryption) }}
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group field field-small">
                    {{ form_label(form.mailAuthMode) }}
                    {{ form_widget(form.mailAuthMode) }}
                    {{ form_errors(form.mailAuthMode) }}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-action">
    {{ form_row(form.cancel) }}
    {{ form_row(form.save) }}
</div>
{{ form_end(form) }}

{% endblock %}
