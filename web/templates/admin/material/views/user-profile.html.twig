{% extends "admin/material/masters/layout-admin.html.twig" %}

{% form_theme form "bootstrap.html.twig" %}

{% block pageHeader %}
    <header class="">
        <div class="header-wrapper">
            <div class="inner-header-wrapper">
                <div class="top-header-wrapper">
                    <div class="header-title">
                        <span>My profile</span>
                    </div>
                </div>
                <div class="bottom-header-wrapper">
                    <div class="tabs user-tabs">
                        <ul>
                            <li class="active">
                                <a href="#profile" role="tab" data-toggle="tab">Profile</a>
                            </li>
                            <li class="">
                                <a href="#credentials" role="tab" data-toggle="tab">Credentials</a>
                            </li>
                            <li class="">
                                <a href="#myposts" role="tab" data-toggle="tab">My posts</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}

    <div class="grid grid-clear">
        <div class="grid-outer">

            <div class="tab-content">
                <div id="profile" class="tab-pane fade in active">
                    <h4>Profile</h4>
                    {% if user.getAvatar %}
                        <div class="user-img select-image">
                            <div class="select-overlay-multiple">
                                <a href="#" class="remove-old">Remove image</a>
                                <a href="#" class="select-new">Change image</a>
                            </div>
                            <img src="{{ app.request.basepath ~ '/uploads/crops/' ~ user.getAvatar }}" alt=""/>
                        </div>
                    {% else %}
                        <div class="user-img select-image">
                            <div class="select-overlay-multiple">
                                <a href="#change" class="select-new">Choose image</a>
                            </div>
                            <img src="{{ app.request.basepath ~ '/assets/images/default-user-icon-profile.png' }}" alt="" />
                        </div>
                    {% endif %}
                    <div class="item-detail">
                        {% for role in user.getRoles %}
                            <span class="label label-info"><i class="fa fa-gavel"></i> {{ role }}</span>
                        {% endfor %}
                        <span class="label label-default"><i class="fa fa-clock-o"></i> {{ user.getCreatedAt|date }}</span>
                        <span class="label label-default"><i class="fa fa-envelope-o"></i> {{ user.getUsername}}</span>
                    </div>

                    {{ form_start(form) }}
                    <div class="form-group field">
                        {{ form_label(form.first_name) }}
                        <div class="field field-small form-element">
                            {{ form_widget(form.first_name) }}
                            {{ form_errors(form.first_name) }}
                        </div>
                    </div>
                    <div class="form-group field">
                        {{ form_label(form.last_name) }}
                        <div class="field field-small form-element">
                            {{ form_widget(form.last_name) }}
                            {{ form_errors(form.last_name) }}
                        </div>
                    </div>
                    <div class="form-group field area form-element">
                        {{ form_label(form.description) }}
                        {{ form_errors(form.description) }}
                        <div class="field field-small">
                            {{ form_widget(form.description, { 'attr': { 'spellcheck': 'false' } }) }}
                        </div>
                    </div>
                    <div class="form-group hidden">
                        {{ form_widget(form.avatarFile) }}
                    </div>
                    {{ form_widget(form.save) }}
                    {{ form_widget(form.cancel) }}
                    {{ form_end(form) }}
                </div>

                <div id="credentials" class="tab-pane fade">
                    <h4>Credentials</h4>
                </div>

                <div id="myposts" class="tab-pane fade">
                    {% if user.getPostsAuthored|length < 1 %}
                        <div class="empty-msg">
                            <h2>No posts</h2>
                            <p class="text-center">No posts here.</p>
                            <div class="holder holder-post">
                                <div class="p-main">
                                    <div class="p-header">
                                        <div class="p-flag"></div>
                                        <div class="p-title"></div>
                                    </div>
                                    <div class="p-content">
                                        <ul class="p-insides">
                                            <li class="img"></li>
                                            <li class="line"></li>
                                            <li class="line"></li>
                                            <li class="line"></li>
                                            <li class="line"></li>
                                            <li class="line"></li>
                                            <li class="line"></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <p class="text-center"><a href="{{ app.url_generator.generate('admin/post/add') }}" class="btn btn-primary btn-action btn-lg" role="button">Add a post now</a></p>
                        </div>
                    {% else %}
                        <h3 class="page-header">My Posts</h3>
                        {% include 'admin/material/widgets/post-list.html.twig' with {'posts': user.getPostsAuthored} %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
