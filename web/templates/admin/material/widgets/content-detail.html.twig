{% if item %}
    {% if item.getType == 'post' %}
        {% include 'admin/material/widgets/post-detail.html.twig' with {post: item} %}
    {% elseif item.getType == 'page'  %}
        {% include 'admin/material/widgets/page-detail.html.twig' with {page: item} %}
    {% elseif item.getType == 'image' or item.getType == 'video' %}
        {% include 'admin/material/widgets/media-detail.html.twig' with {item: item} %}
    {% elseif item.getType == 'form' %}
        {% include 'admin/material/widgets/form-detail.html.twig' with {user_form: item} %}
    {% endif %}
{% endif %}