{% extends page is defined ? "site/strackovski/masters/" ~ page.getMaster ~ ".html.twig" : "site/strackovski/masters/layout-default.html.twig" %}

{% block content %}



<!-- Modal -->
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <img src="assets/images/f1.jpg" alt=""/>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <div class="col-xs-4">i</div>
        <div class="col-xs-4 title"></div>
        <div class="col-xs-4"><a href="#" class="popover-link" data-toggle="popover" title="Share this" data-content="Share links..."><i class="fa fa-share"></i></a></div>
    </div>

    <div class="modal-close" data-dismiss="modal"><span>Escape to close </span><span class="glyphicon glyphicon-remove"></span></div>
    <div class="modal-prev modal-controls"><i class="fa fa-angle-left fa-4x"></i></div>
    <div class="modal-next modal-controls"><i class="fa fa-angle-right fa-4x"></i></div>
</div>


<div class="spinner-wrap">
    <div class="spinner">
        <img src="{{ app.request.basePath }}/templates/site/{{ settings.getPublicTheme }}/assets/images/ss-spinner.png" alt="..."/>
    </div>
</div>

<div class="container-full extra-pad">
    <div class="container">
        <div class="row">
            <div class="tiles">
                {% for item in content %}
                    {% for media in item.getMediaItems %}
                        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                            <div class="block thumbnail">
                                <img src="{{ app.request.basepath ~ '/uploads/' ~ media.getWebPath('large') }}" />
                                <div class="preview" data-title="Title">
                                    <i class="fa fa-search fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}