{% extends app.request.isXmlHttpRequest ? "admin/default/masters/layout-ajax.html.twig" : "admin/default/masters/layout-admin.html.twig" %}

{% form_theme form "bootstrap.html.twig" %}

{% block content %}
    {% if not app.request.isXmlHttpRequest %}
        <div class="main-content">
            <h2 class="page-header top">Change credentials</h2>
            <div class="col-xs-12 npl">
    {% endif %}
                {{ form_start(form, {'action': url('admin/user/credentials') }) }}
                    <div class="form-group field">
                        {{ form_label(form.email) }}
                        <div class="alert alert-info alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            Change email. If you change your email you will be required to enter your password. A confirmation mail will be sent to your current email.
                        </div>
                        <div class="field field-small append-icon">
                            {{ form_widget(form.email) }}
                            <div class="field-addon"><i class="fa fa-pencil"></i></div>
                        </div>
                        {{ form_errors(form.email) }}
                    </div>
                
                    <div class="form-group">
                        <div class="form-credentials clearfix">

                            <div class="row">
                                <div class="col-xs-12 col-md-7 cp-left">
                                    <div class="form-group field field-small">
                                        {{ form_label(form.password) }}
                                        {{ form_widget(form.password) }}

                                    </div>
                                    {{ form_errors(form.password) }}

                                </div>

                                <div class="col-xs-12 col-md-5 cp-right">

                                    <h5><i class="fa fa-info"></i> Your email will be spammed</h5>
                                    <p>This action requires account reactivation</p>
                                </div>
                            </div>

                        </div>
                    </div>
    {{ form_widget(form.save) }}
    {{ form_widget(form.cancel) }}

                {{ form_end(form) }}
    {% if not app.request.isXmlHttpRequest %}
            </div>
        </div>
    {% endif %}
{% endblock %}
