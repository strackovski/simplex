<div class="item-list post-list">
    <div class="item-wrap item-fixed-header">
        <div class="item text-center">
            <div>

            </div>
        </div>
        <div class="item">
            <div>Title</div>
        </div>
        <div class="item">
            <div>Author</div>
        </div>
        <div class="item">
            <div>Last Modified</div>
        </div>
        <div class="item">
            <div>
            </div>
        </div>
    </div>

    {% for post in posts %}
        <div class="item-wrap">
            <div class="item status-item text-center post-item">

                <div class="status-div">
                    {% if post.getPublished %}
                        <div data-action="{{ app.url_generator.generate('admin/post/toggle', {id:post.getId, status:'published'}) }}" class="status-icon toggle-icon"><i class="fa fa-eye active tooltipped" data-toggle="tooltip" data-placement="bottom" title="Publish"></i></div>
                    {% else %}
                        <div data-action="{{ app.url_generator.generate('admin/post/toggle', {id:post.getId, status:'published'}) }}" class="status-icon toggle-icon"><i class="fa fa-eye tooltipped" data-toggle="tooltip" data-placement="bottom" title="Publish"></i></div>
                    {% endif %}

                    {% if post.getExposed %}
                        <div data-action="{{ app.url_generator.generate('admin/post/toggle', {id:post.getId, status:'exposed'}) }}" class="status-icon toggle-icon"><i class="fa fa-star active tooltipped"  data-toggle="tooltip" data-placement="bottom" title="Expose"></i></div>
                    {% else %}
                        <div data-action="{{ app.url_generator.generate('admin/post/toggle', {id:post.getId, status:'exposed'}) }}" class="status-icon toggle-icon"><i class="fa fa-star tooltipped"  data-toggle="tooltip" data-placement="bottom" title="Expose"></i></div>
                    {% endif %}
                </div>
            </div>
            <div class="item">
                <div>
                    <a class="detail-btn" href="{{ app.url_generator.generate('admin/post/get', {post:post.getId}) }}">
                        {{ post.getTitle }}
                    </a>
                </div>
            </div>
            <div class="item">
                <div>{{ post.getAuthor }}</div>
            </div>
            <div class="item">
                <div>{{ post.getCreatedAt|date }}</div>
            </div>
            <div class="item">
                <a class="detail-btn" href="{{ app.url_generator.generate('admin/post/get', {post:post.getId}) }}">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
            </div>
        </div>
    {% endfor %}
</div>
