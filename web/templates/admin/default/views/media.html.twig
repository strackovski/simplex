{% extends app.request.isXmlHttpRequest ? "admin/default/masters/layout-ajax.html.twig" : "admin/default/masters/layout-admin.html.twig" %}

{% form_theme form "bootstrap.html.twig" %}

{% block content %}
    {% if app.request.isXmlHttpRequest %}
        {% if images is defined %}
            {% include "admin/default2/widgets/image-grid.html.twig" %}
        {% elseif videos is defined %}
            {% include "admin/default2/widgets/video-grid.html.twig" %}
        {% endif %}
    {% else %}
        <div class="main-content affix-content">

            <div class="affixed media">
                <div class="row">
                    <div class="col-xs-4 affix-left-controls">
                        <div class="btn-group">
                            <a href="#" class="btn btn-round btn-action tooltipped" data-toggle="tooltip" data-placement="right" title="Add new media"><i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <div class="col-xs-4 text-center rc">
                        <ul class="nav nav-pills nv-segmented-ctrl media-tabs" role="tablist">
                            <li class="active"><a href="#images" role="tab" data-toggle="tab"><i class="fa fa-photo"></i> Images</a></li>
                            <li><a href="#videos" role="tab" data-toggle="tab"><i class="fa fa-video-camera"></i> Videos</a></li>
                        </ul>
                    </div>
                    <div class="col-xs-4 text-right affix-right-controls">
                        <div class="btn-group">
                            <div id="imageThumbnailSize-slider" class="slider-default">
                                <div class="hh"></div>
                                <div class="hh"></div>
                                <div class="hh"></div>
                                <div class="hh"></div>
                                <div class="hh"></div>
                            </div>
                        </div>
                        <div class="btn-group selected-menu">
                            <a href="{{ app.url_generator.generate('admin/media/delete') }}" class="btn btn-primary btn-round btn-cmd cmd-remove-multiple tooltipped" data-placement="bottom" title="Delete selected"><span class="glyphicon glyphicon-trash"></span></a>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-primary btn-round btn-cmd cmd-multiselect tooltipped" href="#" data-toggle="tooltip" data-placement="bottom" title="Select all"><i class="fa fa-square-o"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-content media affix-collection">
                <div class="tab-pane active" id="images">
                    {% block images %}
                        <div class="row thumbnails">
                            <div class="progress hidden">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 4%">
                                </div>
                            </div>
                            <form method="post" enctype="multipart/form-data" action="{{ app.url_generator.generate('admin/media/upload') }}">
                                <div class="im-dropzone im-dropzone-clickable dropzone clearfix col-lg-12">
                                    {% include "admin/default2/widgets/image-grid.html.twig" %}
                                </div>
                                <div class="col-lg-12 form-group hidden">
                                    <h5 class="page-header">Click anywhere or drag new images here</h5>
                                    {{ form_row(form._token) }}
                                    <input type="submit" class="btn btn-primary btn-save" />
                                </div>
                            </form>
                            <div class="loading hidden">loading</div>
                        </div>
                    {% endblock %}
                </div>
                <div class="tab-pane" id="videos">
                    {% block videos %}

                    {% endblock %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
