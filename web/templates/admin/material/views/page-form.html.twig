{% extends "admin/material/masters/layout-admin.html.twig" %}

{% form_theme form with ['bootstrap.html.twig', 'admin/material/masters/flat-form.html.twig'] %}

{% block pageHeader %}
    <header class="">
        <div class="header-wrapper">
            <div class="inner-header-wrapper">
                <div class="top-header-wrapper">
                    <div class="header-title">
                        <span>
                            {% if page is defined %}
                                {{ page.getTitle }}
                            {% else %}
                                New page
                            {% endif %}
                        </span>
                    </div>
                </div>
                <div class="bottom-header-wrapper">
                    <div class="tabs">
                        <ul>
                            <li class="active">
                                <a href="#home" role="tab" data-toggle="tab">Page</a>
                            </li>
                            <li class="">
                                <a href="#data" role="tab" data-toggle="tab">Data</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block rightBlock %}
    <nav class="">
        <div class="right-toolbar">
            <a href="post.html" class="paper-btn back-btn tooltipped" data-toggle="tooltip" data-placement="bottom" title="Back"><i class="fa fa-times"></i></a>
        </div>
    </nav>
{% endblock %}

{% block content %}
<div class="grid grid-clear">
    <div class="grid-outer">
        {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
        <div class="tab-wrap form">
            <div class="tab-content page-content">
                <div class="tab-pane active" id="home">
                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="form-element">
                                    {{ form_label(form.title) }}
                                </div>
                                <div class="form-element">
                                    {{ form_widget(form.title) }}
                                </div>
                                {{ form_errors(form.title) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="form-element">
                                    {{ form_label(form.slug) }}
                                </div>
                                <div class="form-element">
                                    {{ form_widget(form.slug) }}
                                </div>
                                {{ form_errors(form.slug) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="form-element">
                                    {{ form_label(form.master) }}
                                </div>
                                <div class="form-element select">
                                    {{ form_widget(form.master) }}
                                </div>
                                {{ form_errors(form.master) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="form-element">
                                    {{ form_label(form.view) }}
                                </div>
                                <div class="form-element select">
                                    {{ form_widget(form.view) }}
                                </div>
                                {{ form_errors(form.view) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="form-element">
                                    {{ form_label(form.description) }}
                                </div>
                                <div class="form-element">
                                    {{ form_widget(form.description) }}
                                </div>
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="form-element">
                                    {{ form_label(form.typeColor) }}
                                </div>
                                <div class="form-element select">
                                    {{ form_widget(form.typeColor) }}
                                </div>
                                {{ form_errors(form.typeColor) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="data-group">
                            <div class="form-group">
                                <div class="">
                                    <div class="field option">
                                        {{ form_row(form.in_menu) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="data">
                    {% for query in form.queries %}
                        {% include 'admin/material/widgets/edit-query-form.html.twig' with {form: query.vars.form} %}
                    {% endfor %}
                    <div class="add-pq-form" data-proto="{% filter escape %}{% include 'admin/material/widgets/add-query-form.html.twig' %}{% endfilter %}"></div>

                    <div class="data-group">
                        <div class="form-group form-element">
                            {{ form_label(form.authors) }}
                            <div class="field option">
                                {{ form_widget(form.authors) }}
                            </div>
                        </div>
                    </div>


                    <div class="data-group">
                        <div class="form-group form-element">
                            {{ form_label(form.tags) }}
                            <div class="field option">
                                {{ form_widget(form.tags) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group submit-controls page-submit-controls">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
