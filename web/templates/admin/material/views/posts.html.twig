{% extends "admin/material/masters/layout-admin.html.twig" %}

{% block pageHeader %}
    <header class="">
        <div class="header-wrapper">
            <div class="inner-header-wrapper">
                <div class="top-header-wrapper">
                    <div class="header-title">
                        <span>Posts</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div class="grid grid-clear">
        <div class="grid-outer-full">
            <a class="paper-btn float-btn tooltipped" data-toggle="tooltip" data-placement="top" title="New post" href="{{ app.url_generator.generate('admin/post/add') }}">
                <i class="fa fa-plus"></i>
            </a>
            <div class="grid-content">

                {% if posts|length < 1 %}
                    <div class="empty-msg">
                        <h2>No posts here</h2>
                        <div class="holder holder-post">
                            <div class="p-main">
                                <div class="p-header">
                                    <div class="p-flag"></div>
                                    <div class="p-title"></div>
                                </div>
                                <div class="p-content">
                                    <ul class="p-insides">
                                        <li class="img"></li>
                                        <li class="line"></li>
                                        <li class="line"></li>
                                        <li class="line"></li>
                                        <li class="line"></li>
                                        <li class="line"></li>
                                        <li class="line"></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <p>
                            <a class="form-btn new-post" href="{{ app.url_generator.generate('admin/post/add') }}">Add a new post now</a>
                        </p>
                    </div>
                {% else %}
                    {% include 'admin/material/widgets/post-list.html.twig' %}
                {% endif %}
            </div>
        </div>
    </div>

    <div class="right-bar">
        <div class="right-bar-header">
            <div class="top-header">
                <div class="right-aux-toolbar">
                </div>
            </div>
            <div class="bottom-header">
                <h4>Post Title</h4>
            </div>
        </div>
    </div>
{% endblock %}
