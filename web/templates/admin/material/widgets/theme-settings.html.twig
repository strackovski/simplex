{% extends app.request.isXmlHttpRequest ? "admin/material/masters/layout-tabs-panel.html.twig" : "admin/material/views/settings.html.twig" %}

{% block tabPaneHeader %}
<div class="controls-group">
    <div class="controls-group">
        <div class="left-controls">
            <h3>Theme settings</h3>
        </div>
        <div class="right-controls">
            <div class="btn-group">
                <a class="btn btn-cmd cmd-upload-theme btn-round btn-round-sm" href="{{ app.url_generator.generate('admin/settings/themes/add') }}"><i class="fa fa-plus"></i> Upload theme</a>
                <a class="btn btn-round btn-round-sm" href="#"><i class="fa fa-question"></i></a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block tabPaneContent %}

{{ form_start(form) }}

<div class="settings-section">
    <div class="settings-name">
        <h4>Public theme</h4>
    </div>

    <div class="settings-content">
        <div class="des">
            When changing the resampling quality, existing media items do not get resampled. To unify quality off
            all media items in your library, you can resample all items with a click below.
        </div>
        <div class="form-group field field-small option">
            {{ form_widget(form.public_theme) }}
        </div>
    </div>
</div>

<div class="settings-section">
    <div class="settings-name">
        <h4>Admin theme</h4>
    </div>

    <div class="settings-content">
        <div class="des">
            When changing the resampling quality, existing media items do not get resampled. To unify quality off
            all media items in your library, you can resample all items with a click below.
        </div>
        <div class="form-group field field-small option">
            {{ form_widget(form.admin_theme) }}
        </div>
    </div>
</div>
<div class="form-action">
    {{ form_row(form.save) }}
    {{ form_row(form.cancel) }}
</div>
{{ form_end(form) }}

{% endblock %}
