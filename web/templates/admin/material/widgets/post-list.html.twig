<div class="item-list">
    <div class="item-wrap item-header">
        <div class="item">
            <div>Title</div>
        </div>
        <div class="item">
            <div>Author</div>
        </div>
        <div class="item">
            <div>Last Modified</div>
        </div>
        <div class="item">
            <div>

            </div>
        </div>
    </div>

    {% for post in posts %}
        <div class="item-wrap">
            <div class="item">
                <div><a href="{{ app.url_generator.generate('admin/post/view', {post:post.getId}) }}">{{ post.getTitle }}</a></div>
            </div>
            <div class="item">
                <div>{{ post.getAuthor }}</div>
            </div>
            <div class="item">
                <div>{{ post.getCreatedAt|date }}</div>
            </div>
            <div class="item">
                <a class="detail-btn" href="#">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
            </div>
        </div>
    {% endfor %}
</div>
