{% extends app.request.isXmlHttpRequest ? "admin/material/masters/layout-ajax.html.twig" : "admin/material/masters/layout-min.html.twig" %}

{% form_theme form "bootstrap.html.twig" %}

{% block content %}

        <div class="flash-messages">
            {% for message in app.session.getFlashBag.get('success') %}
                <span class="alert alert-flash-message alert-success">{{ message|raw }}</span>
            {% endfor %}
        </div>

        <div class="login-wrap">
            {{ form_start(form, {'class': 'form-signin'}) }}
                <h4 class="text-center">Password Reset</h4>
                <div class="text-center">
                    <img src="{{ app.request.basepath ~ '/assets/images/tetra_gray.png' }}" alt="logo" width="50"/>
                </div>

                <div class="form-group form-element">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group text-center sign-in">
                    {{ form_widget(form.save) }}
                </div>
            {{ form_end(form) }}
        </div>
{% endblock %}
